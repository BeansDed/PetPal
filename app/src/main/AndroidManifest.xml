<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.PetPal"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MainActivity">
            <!-- MainActivity is set to exported as it is accessed externally -->
        </activity>
        <activity
            android:name=".CatalogActivity"
            android:exported="true">
            <!-- CatalogActivity is also exported for navigation -->
        </activity>
        <activity
            android:name=".SignUp"
            android:exported="false">
            <!-- SignUp not exported as it does not need to be accessible externally -->
        </activity>
        <activity
            android:name=".Login"
            android:exported="false">
            <!-- Login activity is kept internal -->
        </activity>
        <activity
            android:name=".Welcome"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
