<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/cartcontainer_radius"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:src="@drawable/cat"
            android:contentDescription="@string/design_desc"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 50"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_marginStart="10dp"
            />

        <Space
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/close_button"
            android:contentDescription="@string/design_desc"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quantity_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/product_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_marginStart="10dp"
            />

        <Space
            android:layout_width="160dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/subtract"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/remove"
            android:background="@drawable/add_subtract_corners"
            android:contentDescription="@string/design_desc"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            />

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add"
            android:background="@drawable/add_subtract_corners"
            android:contentDescription="@string/design_desc"/>

    </LinearLayout>

    <ImageView
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:src="@drawable/add_tocart"
        android:contentDescription="@string/design_desc"
        app:layout_constraintTop_toBottomOf="@id/quantity_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    
</androidx.constraintlayout.widget.ConstraintLayout>