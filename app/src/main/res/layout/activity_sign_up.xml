<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <!-- IDs

    @backBtn
    @username_container
    @username_input
    @email_container
    @email_input
    @password_container
    @password_input
    @confirmpass_container
    @confirmpass_input
    @acceptTerms
    @terms
    @privacyPolicy
    @signin_btn
    @login_sugg

    -->

    <!-- Top Design -->
    <RelativeLayout
        android:id="@+id/topDesign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/topdesign1"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/design_desc"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:src="@drawable/topcat"
            android:contentDescription="@string/design_desc"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/topdesign2"
            android:contentDescription="@string/design_desc"/>

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/back_button"
            android:contentDescription="@string/back_buttonDesc" />

    </RelativeLayout>

    <!-- Bottom Design -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:src="@drawable/botdesign1"
            android:contentDescription="@string/design_desc" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/botcat"
            android:contentDescription="@string/design_desc" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:layout_marginTop="22dp"
            android:src="@drawable/botdesign2"
            android:contentDescription="@string/design_desc" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Title View -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kumar_one"
            android:text="@string/register"
            android:textColor="@color/smth_orange"
            android:textSize="35sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kumar_one"
            android:text="@string/create_Txt"
            android:textColor="@color/smth_black"
            android:textSize="15sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <!--Username Container-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_container"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:helperText=""
            app:helperTextTextColor="@color/red">

            <!-- Username Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username_input"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/user_input_roundedcorner"
                android:fontFamily="@font/alata"
                android:hint=" Username"
                android:inputType="text"
                android:lines="1"
                android:maxLength="20"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <!--Email Container-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_container"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:helperText=""
            app:helperTextTextColor="@color/red">

            <!-- Email Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_input"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/user_input_roundedcorner"
                android:fontFamily="@font/alata"
                android:hint=" Email"
                android:inputType="text"
                android:lines="1"
                android:maxLength="50"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <!--Password Container-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_container"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:helperText=""
            app:helperTextTextColor="@color/red">

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_input"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/user_input_roundedcorner"
                android:fontFamily="@font/alata"
                android:hint=" Password"
                android:inputType="text"
                android:lines="1"
                android:maxLength="16"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <!-- Confirm Password Container -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/confirmpass_container"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:helperText=""
            app:helperTextTextColor="@color/red">

            <!-- Confirm Password Input -->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/confirmpass_input"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:background="@drawable/user_input_roundedcorner"
                android:fontFamily="@font/alata"
                android:hint=" Confirm Password"
                android:inputType="text"
                android:lines="1"
                android:maxLength="16"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Terms and Conditions CheckBox -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/acceptTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="I accept "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Terms and Conditions "
                android:textColor="@color/smth_orange"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="and "
                android:textColor="@color/smth_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Privacy Policy"
                android:textColor="@color/smth_orange"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Sign in Button -->
        <ImageView
            android:id="@+id/signin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/signin_btn"
            android:contentDescription="@string/button_desc" />


        <!-- Login Suggestion -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="@string/login_suggestion"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/login_sugg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="Log In"
                android:textColor="@color/smth_orange"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>