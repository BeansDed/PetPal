<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/product_container"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/product_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="130dp"
            android:layout_height="160dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/cartchoice_image"
            android:contentDescription="@string/design_desc"
            android:src="@drawable/cat" />

        <LinearLayout
            android:id="@+id/product_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toEndOf="@id/product_image"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="20sp"
                android:textColor="@color/darker_orange"
                android:fontFamily="@font/alata"
                android:layout_toEndOf="@+id/product_image"
                />

            <TextView
                android:id="@+id/producePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price"
                android:textSize="17sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:layout_toEndOf="@+id/product_image"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@id/product_image"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp">


            <ImageView
                android:id="@+id/quantity_reduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/remove"
                android:background="@drawable/adding_subtracting"
                android:contentDescription="@string/design_desc"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"/>


            <ImageView
                android:id="@+id/quantity_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:background="@drawable/adding_subtracting"
                android:contentDescription="@string/design_desc"

                />


            <ImageView
                android:id="@+id/remove_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/remove_btn"
                android:contentDescription="@string/design_desc"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>