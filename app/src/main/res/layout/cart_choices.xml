<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/productImage_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Add to Checkout Button -->
        <CheckBox
            android:id="@+id/addtoCheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/cat"
            android:contentDescription="@string/design_desc"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/product_info_container"
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/productImage_container"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Product Name -->
        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="17sp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <!-- Product Manufacturer -->
        <TextView
            android:id="@+id/product_manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Manufacturer"
            android:textSize="17sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/productImage_container"
        app:layout_constraintTop_toBottomOf="@id/product_info_container">

        <!-- Product Price -->
        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 50"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>

        <!-- Reduce Checkout Quantity -->
        <ImageView
            android:id="@+id/subtract_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove"
            android:background="@drawable/add_subtract_corners"
            android:contentDescription="@string/design_desc"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>

        <!-- Product Quantity -->
        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="25sp"
            android:textColor="@color/black"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>

        <!-- Add Checkout Quantity -->
        <ImageView
            android:id="@+id/add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:background="@drawable/add_subtract_corners"
            android:contentDescription="@string/design_desc"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>