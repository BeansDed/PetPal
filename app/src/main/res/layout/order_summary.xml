<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/design_desc"
        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Container (Header) -->
    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/page_design"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Shopping Cart"
            android:textColor="@color/black"
            android:textSize="25sp" />
    </LinearLayout>

    <!-- Product Image Container -->
    <LinearLayout
        android:id="@+id/productImage_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_container"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/cat"
            android:contentDescription="@string/design_desc"/>
    </LinearLayout>

    <!-- Order Summary Details (NOW 0dp WIDTH for responsiveness) -->
    <LinearLayout
        android:id="@+id/summary_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_container"
        app:layout_constraintStart_toEndOf="@id/productImage_container"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/summaryProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="17sp"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Manufacturer"
            android:textSize="17sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/summaryProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 50"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_gravity="start"/>
    </LinearLayout>

    <!-- Product Quantity Section -->
    <LinearLayout
        android:id="@+id/productQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/productImage_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="17sp"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="170dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/subtract_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/remove"
            android:background="@drawable/add_subtract_corners"
            android:contentDescription="@string/design_desc"/>
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <!-- Product Quantity -->
        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <!-- Add Quantity -->
        <ImageView
            android:id="@+id/add_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:background="@drawable/add_subtract_corners"
            android:contentDescription="@string/design_desc"/>
    </LinearLayout>

    <!-- Order Summary Info -->
    <LinearLayout
        android:id="@+id/order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/productQuantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Summary"
            android:textSize="17sp"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>
        <!-- Subtotal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 50"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <!-- Total -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 50"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <!-- Payment Method -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="17sp"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery (COD)"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="165dp"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gcash"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="277dp"
                android:layout_height="wrap_content"/>
            <CheckBox
                android:layout_width="25dp"
                android:layout_height="25dp"/>
        </LinearLayout>
        <!-- Terms / Privacy, etc. -->
    </LinearLayout>

    <!-- Bottom Container for Confirm Payment -->
    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="end|center_vertical"
        android:background="@color/light_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total (1 Item)"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/bottomTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 50"
                android:textSize="17sp"
                android:fontFamily="@font/alata"
                android:layout_gravity="end"
                android:textColor="@color/black"/>
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/confirmPaymentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/checkout"
            android:contentDescription="@string/design_desc"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
