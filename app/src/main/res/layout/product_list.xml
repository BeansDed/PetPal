<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="220dp"
    app:cardElevation="8dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/light_orange"
        android:background="@drawable/product_container">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:src="@drawable/cat"
            android:contentDescription="@string/design_desc"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cat Food"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_marginBottom="-30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_alignBottom="@id/product_img"/>

        <ImageView
            android:id="@+id/product_likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignTop="@id/product_name"
            android:layout_alignEnd="@id/product_name"
            android:src="@drawable/heart_logo"
            android:contentDescription="@string/design_desc"/>

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$60"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_alignBottom="@id/product_name"
            android:layout_marginBottom="-30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/product_soldHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100k Sold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"
            android:layout_alignEnd="@id/product_name"
            android:layout_alignBottom="@id/product_name"
            android:layout_marginBottom="-30dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
